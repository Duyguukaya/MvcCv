@using MvcCv.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
@foreach (var item in Model)
{
    <form method="post" action="/Hobi/Index" class="mb-4">
        <div class="card shadow-sm border-0">
            <div class="card-body bg-light rounded">
                <input type="hidden" name="ID" value="@item.ID" />

                <div class="form-group mb-3">
                    <label class="fw-bold">Açıklama 1</label>
                    <textarea name="Aciklama1" rows="1" class="form-control" placeholder="Birinci açıklamayı girin...">@item.Aciklama1</textarea>
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Açıklama 2</label>
                    <textarea name="Aciklama2" rows="3" class="form-control" placeholder="İkinci açıklamayı girin...">@item.Aciklama2</textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">Güncelle</button>
            </div>
        </div>
    </form>
}

  
