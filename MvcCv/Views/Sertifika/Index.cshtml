@using MvcCv.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string renk = "";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {


                                        if (item.ID % 2 == 0)
                                        {
                                            renk = "darkslategray";
                                        }
                                        else
                                        {
                                            renk = "darkolivegreen";
                                        }

                                        <div class="time-label">
                                            <span style="background-color: @renk;border: 1px solid;padding: 4px; border-radius: 4px;color: white">
                                                @item.Tarih
                                            </span>

                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body" style="color:black">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a class="btn btn-outline-warning btn-sm" style="color:black" href="/Sertifika/SertifikaGetir/@item.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                    <a class="btn btn-outline-danger btn-sm" style="color:black" href="/Sertifika/SertifikaSil/@item.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                               <a href="/Sertifika/YeniSertifika" class="btn btn-outline-info">Yeni Sertifika Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


