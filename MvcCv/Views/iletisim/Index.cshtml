@using MvcCv.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        @foreach(var item in Model) {
                                        <div class="time-label">
                                            <span style="background-color:darkseagreen; color:white">
                                                @(item.Tarih.HasValue ? item.Tarih.Value.ToString("dd.MM.yyyy") : "")

                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-comments" style="background-color:darkslategray; color:white"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fas fa-envelope"></i> @item.Mail</span>
                                                <h3 class="timeline-header" style="color:darkslategray; font-weight:bold" ><a href="#"style="color:black; font-weight:bold;" >@item.AdSoyad</a> @item.Konu</h3>
                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>